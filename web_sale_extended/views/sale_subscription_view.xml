<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="sale_subscription_view_form_inherit" model="ir.ui.view">
            <field name="name">sale.subscription.form.view</field>
            <field name="model">sale.subscription</field>
            <field name="inherit_id" ref="sale_subscription.sale_subscription_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Beneficiarios" id="beneficiaries">
                        <group>
                            <field name="subscription_partner_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="document_type_id"/>
                                    <field name="identification_document"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                    <field name="birthdate_date"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="policy_number"/>
                </xpath>
            </field>
        </record>


     <data>
        <record id="sftp_report_view_tree" model="ir.ui.view">
            <field name="name">sftp.report.subscription.line.view.tree</field>
             <field name="type">tree</field>
            <field name="model">report.sftp</field>
            <field name="arch" type="xml">
                <tree string="SFTP lines" create="0" edit="0">
                    <field name="policy_number"/>
                    <field name="certificate_number"/>
                    <field name="firstname"/>
                    <field name="othernames"/>
                    <field name="lastname"/>
                    <field name="lastname2"/>
                    <field name="birthdate_date"/>
                    <field name="date_start"/>
                    <field name="gender"/>
                    <field name="identification_document"/>
                    <field name="default_code"/>
                    <field name="recurring_interval"/>
                    <field name="sponsor_name"/>
                    <field name="sponsor_nit"/>
                    <field name="sponsor_payment_url"/>
                    <field name="country"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="mobile"/>
                    <field name="street"/>
                    <field name="state_id"/>
                    <field name="zip_id"/>
                    <field name="ocupation"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_report_sftp_tree">
            <field name="name">SFTP Report</field>
            <field name="res_model">report.sftp</field>
            <field name="view_mode">tree</field>
        </record>
    </data>


        <menuitem id="sale_subscription_sftp_report" name="Reporte SFTP" parent="sale_subscription.menu_sale_subscription_config" sequence="5" action="web_sale_extended.action_report_sftp_tree" groups="sale_subscription.group_sale_subscription_view"/>

</odoo>
