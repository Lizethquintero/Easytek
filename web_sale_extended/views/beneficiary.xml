<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="beneficiary">
        <t t-call="website.layout">
            
            <div class="container">
                <h3>Datos del Asegurado Principal o Tomador</h3>
                <div class="row">
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label class="col-form-label" for="name">Primer Nombre</label>
                            <input class="form-control" type="text" name="name" />
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="form-group">
                            <label class="col-form-label" for="document">Tipo de documento</label>
                            <select name="document" class="form-control">
                                <option value="">C.C</option>
                                <option value="1" style="">P.A</option>
                                            
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label class="col-form-label" for="numero_documento">Numero documento</label>
                            <input class="form-control" type="text" name="numero_documento" />
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label class="col-form-label" for="email">Email</label>
                            <input class="form-control" type="email"  name="email" placeholder='ejemplo@ejemplo.com' />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label class="col-form-label" for="phone">Número telefono</label>
                            <input class="form-control" type="text" name="phone" />
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label class="col-form-label" for="sex">Sexo</label>
                            <select name="sex" class="form-control">
                                <option value="">Masculino</option>
                                <option value="1" style="">Femenino</option>
                                <option value="1" style="">Otro</option>

                                            
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label class="col-form-label" for="sex">Estado Civil</label>
                            <select name="sex" class="form-control">
                                <option value="">Estado civil</option>
                                <option value="1" style="">Casado</option>
                                <option value="2" style="">Soltero</option>

                                            
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-8">
                        <div class="form-group">
                            <!-- <label class="col-form-label" for="address">Número telefono</label> -->
                            <input class="form-control" type="text" name="address" placeholder="Dirección de residencia"/>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label class="col-form-label" for="date">Fecha nacimiento</label>
                            <input class="form-control" type="date" name="date"  />
                        </div>
                    </div>
                    
                </div>


                <div class="row">
                    
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label class="col-form-label" for="deparment">Departamento</label>
                            <select name="deparment" class="form-control">
                                <option value="">Departamento...</option>
                                <option value="1" style="">Valle del Cauca</option>
                                <option value="1" style="">Cundinamarca</option>

                                            
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label class="col-form-label" for="city">Ciudad</label>
                            <select name="city" class="form-control">
                                <option value="">Ciudad</option>
                                <option value="1" style="">Bogotá</option>
                                <option value="2" style="">Cali</option>

                                            
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label class="col-form-label" for="profesion">Profesión</label>
                            <input class="form-control" type="text" name="profesion"  />
                        </div>
                    </div>
                </div>
                <div class="row">
                    
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label class="col-form-label" for="beneficiario">Cantidad de beneficiarios a incluir</label>
                            <select name="beneficiario" class="form-control">
                                <option value="">...</option>
                                <option value="1" style="">1</option>
                                <option value="1" style="">2</option>
                                <option value="1" style="">3</option>
                                <option value="1" style="">4</option>
                                <option value="1" style="">5</option>
                                <option value="1" style="">6</option>

                                            
                            </select>
                        </div>
                    </div>
                    
                </div>
                
            </div>
        </t>
    </template>
</odoo>