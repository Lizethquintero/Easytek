<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="beneficiary">
        <t t-call="website.layout">
            
            <div class="container">
                <h2>Datos del Asegurado Principal o Tomador</h2>
                <div class="row">
                    <div class="col-lg-4">
                        <div class="form-control">
                            <label class="col-form-label" for="name">Primer Nombre</label>
                            <input type="text" name="name" />
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="form-control">
                            <label class="col-form-label" for="document">Tipo de documento</label>
                            <select name="document" t-attf-class="form-control #{error.get('') and 'is-invalid' or ''}" t-att-mode="mode[1]">
                                <option value="">C.C</option>
                                <option value="1" style="">P.A</option>
                                            
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-control">
                            <label class="col-form-label" for="numero_documento">Numero documento</label>
                            <input type="text" name="numero_documento" />
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-control">
                            <label class="col-form-label" for="email">Email</label>
                            <input type="email"  name="email" placeholder='ejemplo@ejemplo.com' />
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>